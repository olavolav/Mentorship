<p id="notice"><%= notice %></p>

<h1>Current Mentorship Assignment</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Senior mentor</th>
      <th>Junior mentor</th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td><%= render partial: 'developer', object: developer %></td>
        <td><%= render partial: 'developer', object: developer.senior_mentor %></td>
        <td><%= render partial: 'developer', object: developer.junior_mentor %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Honeybadger Role</h2>

<p>
  <%= render partial: 'developer', object: @honeybadger_responsible %>
  <br>
</p>

<p>
  <%= link_to 'Back to listing', developers_path, class: 'btn btn-default' %>
  <%= link_to 'Recompute', generate_assignment_developers_path, class: 'btn btn-warning' %>
</p>
